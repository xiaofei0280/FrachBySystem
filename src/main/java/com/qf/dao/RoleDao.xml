<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace：命名空间，用于隔离sql -->
<!-- 还有一个很重要的作用，使用动态代理开发DAO,1. namespace必须和Mapper接口类路径一致 -->
<mapper namespace="com.qf.dao.RoleDao">

    <select id="findRoleByUsername" parameterType="string" resultType="string">

         select t_role.role_name
        from t_user
        JOIN t_user_role ON t_user.id = t_user_role.user_id
        JOIN t_role on t_role.id = t_user_role.role_id
        WHERE t_user.username=#{username}

    </select>

</mapper>